<!doctype html>
<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="/style.css"/>
    </head>
    <body>
        <div class='category-list'>
            <div class='category'>
            <div class="title-section"><h4> <%= title %> </h4></div>
                <%if (games.length) {%>
                    <%games.forEach((game) => {%>
                        <p><a href="/games/<%= game.id %>"><%= game.title%></a></p>
                    <%})%>
                <%} else {%>
                    <h4>Game list empty</h4>
                <%}%>
            </div>
        </div>
    </body>
</html>

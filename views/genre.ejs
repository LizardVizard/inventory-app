<!doctype html>
<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="/style.css"/>
    </head>
    <body>
        <%if (!genreFound) {%>
            <h3>Genre not found</h3>
        <%} else {%>
            <h3> List of games with <%= genre.name %> genre: </h3>
            <ul>
                <%if (!games) {%>
                    <b>No games</b>
                <%} else {%>
                    <%games.forEach((game) => {%>
                        <li><a href="/games/<%=game.id%>"><%= game.title%></a></li>
                    <%})%>
                <%}%>
            </ul>
        <%}%>
    </body>
</html

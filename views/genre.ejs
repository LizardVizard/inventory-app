<!doctype html>
<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="/style.css"/>
    </head>
    <body>
        <%if (!genreFound) {%>
            <h3>Genre not found</h3>
        <%} else {%>
        <div class='category-list'>
            <div class='category'>
            <div class="title-section"><h4>  List of games with <%= genre.name %> genre: </h4>
                    <a href="/genres/<%= genre.id%>/delete/" tabindex="-1"><button>Delete</button></a>
                </div>
                <%if (games) {%>
                    <%games.forEach((game) => {%>
                        <p><a href="/games/<%= game.id %>"><%= game.title%></a></p>
                    <%})%>
                <%} else {%>
                    <h4>No games</h4>
                <%}%>
            </div>
        </div>
        <%}%>
    </body>
</html>
